<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stockcourt">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcherxxxhdpi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/appicon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        >
        <activity android:name=".Models.Controller.TrendsActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Models.Controller.TrendsActivity"
                />

        </activity>
        <activity android:name=".Models.Controller.LoginActivity" />
        <activity android:name=".Models.Controller.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Models.Controller.RegisterActivity"/>
        <activity android:name=".Models.Controller.BusinessRegisterActivity"/>
        <activity android:name=".Models.Controller.Article"
            android:label="Article"
            android:launchMode="singleTop">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Models.Controller.TrendsActivity"
                />
        </activity>
        <activity android:name=".Models.Controller.ProfileActivity"></activity>
        <activity android:name=".Models.Controller.ProfileEditActivity"></activity>
        <activity android:name=".Models.Controller.ProfileChangeNameActivity"
            android:launchMode="singleTop"
            ></activity>
        <activity android:name=".Models.Controller.ProfileChangePasswordActivity"></activity>
    </application>

</manifest>